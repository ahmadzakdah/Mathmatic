<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#988080"
    tools:context=".Contact">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="371dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:srcCompat="@drawable/contact" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05109489" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:text="Contact us for any problem or any question."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/instagramIcon"
        android:layout_width="90dp"
        android:layout_height="129dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/CallButton"
        app:srcCompat="@drawable/instagram" />

    <ImageView
        android:id="@+id/facebookIcon"
        android:layout_width="75dp"
        android:layout_height="130dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toEndOf="@+id/instagramIcon"
        app:layout_constraintTop_toBottomOf="@+id/CallButton"
        app:srcCompat="@drawable/facebook" />

    <Button
        android:id="@+id/CallButton"
        android:layout_width="209dp"
        android:layout_height="68dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="96dp"
        android:text="Call Us"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="343dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:text="Copyrights reserved. Birzeit University."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/instagramIcon" />

    <Button
        android:id="@+id/homebtn"
        android:layout_width="128dp"
        android:layout_height="59dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="32dp"
        android:text="Home Page"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/CallButton" />

</androidx.constraintlayout.widget.ConstraintLayout>